# Authentication Example Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=false

# JWT Configuration (REQUIRED for auth example)
JWT_SECRET=auth-example-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT=100/minute

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO

# BCrypt Configuration
BCRYPT_ROUNDS=12

# Database (if using real DB instead of in-memory)
# DATABASE_URL=sqlite:///auth_example.db
# DATABASE_URL=postgresql://user:password@localhost/auth_db
# DATABASE_URL=mysql://user:password@localhost/auth_db
