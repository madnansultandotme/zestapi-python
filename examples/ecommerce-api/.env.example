# E-commerce API Example Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=false

# JWT Configuration (REQUIRED for auth)
JWT_SECRET=ecommerce-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT=100/minute

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO

# Database Configuration
# DATABASE_URL=sqlite:///ecommerce.db
# DATABASE_URL=postgresql://user:password@localhost/ecommerce_db
# DATABASE_URL=mysql://user:password@localhost/ecommerce_db

# Payment Integration (example)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (for order notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# FROM_EMAIL=noreply@yourdomain.com

# File Upload
# MAX_UPLOAD_SIZE=10485760  # 10MB
# UPLOAD_DIR=./uploads/products

# Admin Configuration
ADMIN_EMAIL=admin@ecommerce.local
ADMIN_PASSWORD=admin123
