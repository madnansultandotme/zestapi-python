# WebSocket Chat Example Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=false

# JWT Configuration (optional for chat)
JWT_SECRET=chat-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT=100/minute

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO

# Chat Configuration
MAX_MESSAGE_LENGTH=1000
MAX_ROOM_USERS=50
MESSAGE_HISTORY_LIMIT=100
TYPING_TIMEOUT=3

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Message Persistence (if using real DB)
# DATABASE_URL=sqlite:///chat.db
# DATABASE_URL=redis://localhost:6379/0

# Moderation
ENABLE_PROFANITY_FILTER=false
# PROFANITY_API_KEY=your_profanity_api_key
